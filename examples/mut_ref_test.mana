module mut_ref_test;

struct Point {
    x: i32;
    y: i32;
}

fn print_point(p: &Point) -> void {
    print("Point(");
    print(p.x);
    print(", ");
    print(p.y);
    println(")");
}

fn move_point(p: &mut Point, dx: i32, dy: i32) -> void {
    p.x = p.x + dx;
    p.y = p.y + dy;
}

fn main() -> i32 {
    let p = Point{x: 10, y: 20};  // let is now mutable by default
    print("Initial: ");
    print_point(&p);

    move_point(&mut p, 5, 10);
    print("After move: ");
    print_point(&p);

    return 0;
}
