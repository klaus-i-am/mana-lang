module memory_test;

fn main() -> i32 {
    println("=== Memory Safety Demo ===");

    // Mutable binding (let) - can be reassigned
    let counter = 0;
    println(counter);
    counter = 1;
    println(counter);
    counter = 2;
    println(counter);

    // Immutable binding (const) - cannot be reassigned
    const value = 42;
    println(value);
    // value = 100;  // ERROR: cannot assign to immutable variable

    println("Done!");
    return 0;
}
