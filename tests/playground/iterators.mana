module main

fn main() {
    // For-in with range (exclusive)
    println("Counting 0 to 4:")
    for i in 0..5 {
        println("  ", i)
    }

    // For-in with array
    let numbers = [10, 20, 30, 40, 50]
    let mut sum = 0
    for n in numbers {
        sum = sum + n
    }
    println("Sum of array:", sum)

    // Nested iteration
    println("Multiplication table 1-3:")
    for i in 1..4 {
        for j in 1..4 {
            let product = i * j
            println("  ", i, " x ", j, " = ", product)
        }
    }
}
