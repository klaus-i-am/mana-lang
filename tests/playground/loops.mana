module main

fn main() {
    // While loop with counter
    let mut i = 0
    let mut sum = 0
    while i < 5 {
        sum = sum + i
        i = i + 1
    }
    println("Sum of 0..4: ", sum)

    // Countdown
    let mut count = 3
    while count > 0 {
        println("Countdown: ", count)
        count = count - 1
    }
    println("Liftoff!")
}
