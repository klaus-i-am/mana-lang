// Range expressions test
module test_range;

fn main() -> i32 {
    // Exclusive range
    print("exclusive: ");
    for i in 0..5 {
        print(i);
        print(" ");
    }
    println("");
    // expect: exclusive: 0 1 2 3 4

    // Inclusive range
    print("inclusive: ");
    for i in 1..=5 {
        print(i);
        print(" ");
    }
    println("");
    // expect: inclusive: 1 2 3 4 5

    // Range with step (using while)
    print("step by 2: ");
    for i: i32 = 0; i < 10; i = i + 2 {
        print(i);
        print(" ");
    }
    println("");
    // expect: step by 2: 0 2 4 6 8

    // Descending range
    print("descending: ");
    for i: i32 = 5; i > 0; i = i - 1 {
        print(i);
        print(" ");
    }
    println("");
    // expect: descending: 5 4 3 2 1

    return 0;
}
