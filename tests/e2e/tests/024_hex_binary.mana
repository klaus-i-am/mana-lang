// Hex and binary literals test
module test_literals;

fn main() -> i32 {
    // Hex literals
    let hex1: i32 = 0xFF;
    println(hex1);
    // expect: 255

    let hex2: i32 = 0x10;
    println(hex2);
    // expect: 16

    let hex3: i32 = 0xDEAD;
    println(hex3);
    // expect: 57005

    // Binary literals
    let bin1: i32 = 0b1010;
    println(bin1);
    // expect: 10

    let bin2: i32 = 0b11111111;
    println(bin2);
    // expect: 255

    let bin3: i32 = 0b1000;
    println(bin3);
    // expect: 8

    // Octal literals
    let oct1: i32 = 0o17;
    println(oct1);
    // expect: 15

    let oct2: i32 = 0o777;
    println(oct2);
    // expect: 511

    // Scientific notation
    let sci1: f64 = 1e6;
    println(sci1);
    // expect: 1000000

    let sci2: f64 = 2.5e3;
    println(sci2);
    // expect: 2500

    return 0;
}
